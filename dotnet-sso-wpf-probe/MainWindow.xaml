<Window x:Class="dotnet_sso_wpf_probe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dotnet_sso_wpf_probe"
        mc:Ignorable="d"
        Title=".NET SSO Probe" Height="800" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="240" />
        </Grid.RowDefinitions>

        <!-- Left panel: options and settings -->
        <StackPanel Grid.Column="0" Margin="12">
            <DockPanel Margin="0,0,0,12" LastChildFill="True">
                <TextBlock Text=".NET SSO Probe" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" />
            </DockPanel>

            <Button x:Name="OidcButton" Content="OpenID Connect (OIDC)" Height="48" Margin="0,0,0,8" />
            <Separator Margin="0,12,0,12" />
            <TextBlock Text="Configuration" FontWeight="Bold" Margin="0,0,0,8" />
            <Button x:Name="EditConfigButton" Content="Edit config (JSON)" Height="36" />
            <!-- Current user info -->
            <TextBlock Text="Current User" FontWeight="Bold" Margin="0,12,0,4" />
            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="6" Padding="6" Margin="0,0,0,8" Width="300" Height="280">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <TextBox x:Name="CurrentUserText" Text="(unknown)" IsReadOnly="True" TextWrapping="NoWrap" BorderThickness="0" Background="Transparent" />
                </ScrollViewer>
            </Border>
        </StackPanel>

        <Border Grid.Column="1" Grid.Row="0" BorderBrush="Gray" BorderThickness="1" CornerRadius="6" Padding="4" Margin="6">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">

            <TextBox x:Name="SerilogSinkBox"
                     IsReadOnly="True"
                     TextWrapping="NoWrap"
                     VerticalScrollBarVisibility="Auto"
                     AcceptsReturn="True"
                     FontFamily="Consolas"
                     FontSize="14" />
            </ScrollViewer>
        </Border>

        <!-- Bottom: logs, claims, raw token in three columns -->
        <Grid Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Margin="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>


            <!-- Claims -->
            <StackPanel Grid.Column="0" Margin="6">
                <TextBlock Text="Parsed Claims / Attributes" FontWeight="Bold" Margin="0,0,0,6" />
                <ListView x:Name="ClaimsList" Height="190" />
            </StackPanel>

            <!-- Raw token -->
            <StackPanel Grid.Column="1" Margin="6">
                <TextBlock Text="Raw token / response" FontWeight="Bold" Margin="0,0,0,6" />
                <TextBox x:Name="RawBox" Height="190" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
            </StackPanel>
        </Grid>

    </Grid>
</Window>
